<%- include('header.ejs') %>

  <div class="container">
    <h1>
      <%= __('New Product') %>
    </h1>

    <form method="POST" action="/products/new" enctype="multipart/form-data">

      <!-- Name -->
      <div class="mb-3">
        <label for="name" class="form-label">
          <%= __('Product Name') %>
        </label>
        <input type="text" name="name" id="name" class="form-control" required>
      </div>

      <!-- Price -->
      <div class="mb-3">
        <label for="price" class="form-label">
          <%= __('Price') %>
        </label>
        <input type="number" name="price" id="price" class="form-control" required min="0" step="0.01">
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label">
          <%= __('Image') %>
        </label>
        <input type="file" name="image" id="image" class="form-control">
      </div>

      <!-- Tags -->
      <div class="mb-3">
        <label for="tags" class="form-label">
          <%= __('Tags') %>
        </label>
        <select multiple name="tags" id="tags" class="form-select">
          <option value="mobile">
            <%= __('Mobile') %>
          </option>
          <option value="lifestyle">
            <%= __('Lifestyle') %>
          </option>
          <option value="motor">
            <%= __('Motor') %>
          </option>
          <option value="tech">
            <%= __('Tech') %>
          </option>
        </select>
        <div class="form-text">
          <%= __('Hold Ctrl (Windows) or Cmd (Mac) to select multiple') %>
        </div>
      </div>

      <button type="submit" class="btn btn-primary">
        <%= __('Submit') %>
      </button>
    </form>
  </div>

  <%- include('footer.ejs') %>